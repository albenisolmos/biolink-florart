---
import ButtonLink from '../components/ButtonLink.astro'
import Layout from '../layouts/Layout.astro'
import Logo from '../icons/Logo.astro'
import Header from '../components/Header.astro'
import TelegramIcon from '../icons/Telegram.astro'
import WhatsappIcon from '../icons/Whatsapp.astro'

const linkToWhatsapp = 'https://wa.me/message/4BEU6RWR36OYM1'
const linkToTelegram = 'https://t.me/Florart10'
---
<Layout
	title='Florart - Descubre de la eternidad en nuestras flores'
	description='Bio link of flor art'>
	<section class='grid grid-rows-4 items-center min-h-full overflow-auto'>
		<Header class='row-span-2' />

		<section class='relative flex flex-col gap-4 row-span-3'>
			<Logo class='absolute text-white/10 size-96 left-[50%] top-[50%] translate-x-[-50%] translate-y-[-50%] -z-10'/>

			<ButtonLink href={linkToWhatsapp}>
				<WhatsappIcon class='size-8'/>
				Whatsapp
			</ButtonLink>
			<ButtonLink href={linkToTelegram}>
				<TelegramIcon class='size-8'/>
				Telegram
			</ButtonLink>
		</section>

		<section class='relative h-[15em] w-[30em] row-span-4'>
			<img src='/flor-1.png' alt='Ramo de flores de florart' class='absolute -left-0 -bottom-8 h-full aspect-auto'>
			<img src='/flor-2.png' alt='Ramo de flores de florart' class='absolute left-[50%] translate-x-[-50%] -bottom-4 h-full aspect-auto'>
			<img src='/flor-3.png' alt='Ramo de flores de florart' class='absolute -right-0 -bottom-8 h-full aspect-auto'>
		</section>
	</section>
</Layout>
